[Unit]
Description=Kubernetes Controller Manager
Documentation=https://github.com/kubernetes/kubernetes

[Service]
ExecStart=/usr/local/bin/kube-controller-manager \
  --cert-dir="{{ pki_dir }}" \
  --cluster-name=kubernetes \
  --cluster-signing-cert-file={{ pki_dir }}/ca.pem \
  --cluster-signing-key-file={{ pki_dir }}/ca-key.pem \
  --kubeconfig={{ pki_dir }}/kube-controller-manager.kubeconfig \
  --leader-elect=true \
  --root-ca-file={{ pki_dir }}/ca.pem \
  --service-account-private-key-file={{ pki_dir }}/service-account-key.pem \
  --service-cluster-ip-range={{ SERVICE_CLUSTER_IP_RANGE }} \
  --use-service-account-credentials=true \
  --authentication-kubeconfig={{ pki_dir }}/kube-controller-manager.kubeconfig \
  --authorization-kubeconfig={{ pki_dir }}/kube-controller-manager.kubeconfig \
  --v=2 \
  --bind-address=127.0.0.1 \
  --secure-port=10257 \
  --profiling=false

Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
