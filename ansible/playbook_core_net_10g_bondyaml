- name: 10g bonded Network
  hosts: all

  tasks:
  - name: netplan for 10G bonded
    copy:
      force: yes
      dest: "/etc/netplan/05-10G-bonding.yaml"
      content: '{{ lookup("template", "files/netplan/05-10G-bonding.yaml.j2") }}'

  - name: remove default netplan config
    ignore_errors: yes
    file:
      path: /etc/netplan/00-installer-config.yaml
      state: absent

  - name: netplan apply
    shell: >
      netplan apply

  - name: 10g tc qdisc boot oneshot service
    copy:
      dest: /etc/systemd/system/10g_qdisc.service
      content: |
        [Unit]
        After=network.target

        [Install]
        WantedBy=multi-user.target

        [Service]
        Type=oneshot
        RemainAfterExit=true
        ExecStart=/sbin/tc qdisc add dev eth0 root fq maxrate 9gbit
        ExecStart=/sbin/tc qdisc add dev eth1 root fq maxrate 9gbit

  - name: Enable and Start service
    systemd:
      enabled: yes
      state: restarted
      name: 10g_qdisc.service
      daemon_reload: true

    - name: 10g tc qdisc boot oneshot service
      copy:
        dest: /etc/systemd/system/10g_qdisc.service
        content: |
          [Unit]
          After=network.target

          [Install]
          WantedBy=multi-user.target

          [Service]
          Type=oneshot
          RemainAfterExit=true
          ExecStart=/sbin/tc qdisc add dev eth0 root fq maxrate 9gbit
          ExecStart=/sbin/tc qdisc add dev eth1 root fq maxrate 9gbit
          ExecStart=/sbin/tc qdisc add dev eth2 root fq maxrate 9gbit
          ExecStart=/sbin/tc qdisc add dev eth3 root fq maxrate 9gbit

    - name: Enable and Start service
      systemd:
        enabled: yes
        state: restarted
        name: 10g_qdisc.service
        daemon_reload: true
