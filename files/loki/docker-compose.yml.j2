version: '3.8'

services:
  loki:
    image: grafana/loki:2.9.3
    container_name: loki
    user: "1001:1001"
    restart: unless-stopped
    ports:
      - "3100:3100"
    volumes:
      - {{ basedir }}/data:/loki
      - {{ basedir }}/config/loki-config.yaml:/etc/loki/local-config.yaml:ro
    command: -config.file=/etc/loki/local-config.yaml
    environment:
      - TZ=America/Los_Angeles
    networks:
      - loki_network
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3100/ready || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    deploy:
      resources:
        limits:
          cpus: '4'
          memory: 4G
        reservations:
          cpus: '2'
          memory: 2G
    security_opt:
      - no-new-privileges:true
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

networks:
  loki_network:
    driver: bridge
