[Unit]
Description=Jellyfin Media Server (Docker Compose)
After=docker.service zfs-mount.service zfs-import.target network-online.target
Requires=docker.service zfs-mount.service zfs-import.target
RequiresMountsFor=/data01
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory={{ jellyfin_home }}
User={{ user }}
Group={{ user }}

# Environment
Environment="PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
Environment=COMPOSE_HTTP_TIMEOUT=60

# Start service
ExecStart=/usr/bin/docker compose -f {{ jellyfin_home }}/docker-compose.yml up -d

# Stop service
ExecStop=/usr/bin/docker compose -f {{ jellyfin_home }}/docker-compose.yml down

# Reload service
ExecReload=/usr/bin/docker compose -f {{ jellyfin_home }}/docker-compose.yml restart

# Timeouts
TimeoutStartSec=600
TimeoutStopSec=600

# Restart policy
Restart=on-failure
RestartSec=10s
