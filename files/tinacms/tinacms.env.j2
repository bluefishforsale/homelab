# TinaCMS Next.js Blog Environment Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

# Node Environment
NODE_ENV=production

# TinaCMS Configuration
# Set to 'true' for local development (content stored locally)
# Set to 'false' for GitHub integration (content stored in GitHub repo)
TINA_PUBLIC_IS_LOCAL={{ cloud_services.tinacms.tina_public_is_local | default('true') }}

# GitHub Integration (optional - only needed if TINA_PUBLIC_IS_LOCAL=false)
GITHUB_OWNER={{ development.github.github_owner | default('') }}
GITHUB_REPO={{ cloud_services.tinacms.github_repo | default('') }}
GITHUB_BRANCH={{ development.github.github_branch | default('main') }}
GITHUB_PERSONAL_ACCESS_TOKEN={{ development.github.token | default('') }}

# NextAuth Configuration (required for authentication)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET={{ cloud_services.tinacms.nextauth_secret | default('') }}
NEXTAUTH_URL=http://192.168.1.143:8084

# Base URL for TinaCMS (important for local mode)
NEXT_PUBLIC_TINA_CLIENT_ID=local

# Timezone
TZ=America/Los_Angeles
