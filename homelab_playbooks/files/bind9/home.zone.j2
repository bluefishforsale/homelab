$ORIGIN home.
$TTL 86400 ; 1 day

@ IN SOA dns01.home. dnsadmin.home. (
      {{ ansible_date_time.epoch }}    ; serial
      3600          ; refresh (1 hours)
      3600          ; retry (1 hour)
      3600          ; expire (1 hour)
      3600          ; minimum (1 hour)
)

@                 IN          NS    dns01.home.

gw                IN          A     192.168.1.1
dns01             IN          A     192.168.1.2
gitlab            IN          A     192.168.1.5
pihole            IN          A     192.168.1.9
unifi             IN          A     192.168.1.10

; Add a wildcard record to resolve any undefined *.home domains
; currently resolves to ocean nginx instance
*.home.          IN        A    192.168.1.143


;; 192.168.1.64/27 Assigned to MetalLB
;;    [CIDR]
;;    Network range              - 192.168.1.64 - 192.168.1.95
;;    Network address            - 192.168.1.64
;;    Broadcast address          - 192.168.1.95
;;    Network mask               - 255.255.255.224
