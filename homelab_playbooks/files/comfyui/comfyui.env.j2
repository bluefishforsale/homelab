# ComfyUI Configuration Environment Variables
# This file contains environment variables for ComfyUI configuration

# Timezone
TZ=America/Los_Angeles

# GPU Configuration
CUDA_VISIBLE_DEVICES=all
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# ComfyUI Server Configuration
COMFYUI_HOST=0.0.0.0
COMFYUI_PORT={{ port }}
COMFYUI_LISTEN=0.0.0.0
COMFYUI_ENABLE_CORS_HEADER=1

# ComfyUI Path Configuration
COMFYUI_PATH=/opt/ComfyUI
COMFYUI_MODELS_PATH=/models
COMFYUI_INPUT_PATH=/input
COMFYUI_OUTPUT_PATH=/output
COMFYUI_CUSTOM_NODES_PATH=/custom_nodes

# Performance Configuration
COMFYUI_PYTORCH_ATTENTION_SPLIT=1
COMFYUI_USE_SPLIT_CROSS_ATTENTION=1
COMFYUI_DISABLE_XFORMERS=0

# Memory Management
COMFYUI_VRAM_USAGE=normal
COMFYUI_LOWVRAM=0
COMFYUI_NORMALVRAM=0
COMFYUI_HIGHVRAM=1

# Logging
COMFYUI_VERBOSE=1
COMFYUI_DONT_PRINT_SERVER=0

# Security
COMFYUI_AUTO_LAUNCH=0
COMFYUI_EXTRA_MODEL_PATHS_CONFIG_PATH=/config/extra_model_paths.yaml
