# llama.cpp Configuration Environment Variables
# This file contains environment variables for llama.cpp configuration

# Timezone
TZ=America/Los_Angeles

# GPU Configuration
CUDA_VISIBLE_DEVICES=all
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# llama.cpp Server Configuration
LLAMA_ARG_HOST=0.0.0.0
LLAMA_ARG_PORT={{ port }}
LLAMA_ARG_CTX_SIZE=4096
LLAMA_ARG_N_GPU_LAYERS=-1
LLAMA_ARG_VERBOSE=1

# Performance Tuning
LLAMA_ARG_N_THREADS=8
LLAMA_ARG_N_PARALLEL=1
LLAMA_ARG_BATCH_SIZE=512
LLAMA_ARG_UBATCH_SIZE=512

# API Configuration  
LLAMA_ARG_TIMEOUT=600
LLAMA_ARG_EMBEDDINGS=1
LLAMA_ARG_FLASH_ATTN=1

# Logging
LLAMA_LOG_LEVEL=INFO
LLAMA_LOG_DISABLE_LOGS=0

# Security
LLAMA_ARG_API_KEY=
LLAMA_ARG_CORS=1
