version: '3.8'

services:
  mysql:
    image: {{ image }}:{{ version }}
    container_name: {{ service }}
    hostname: {{ service }}
    restart: unless-stopped
    
    environment:
      - TZ=America/Los_Angeles
      - MYSQL_ROOT_PASSWORD={{ root_password }}
      - MYSQL_USER={{ mysql_user }}
      - MYSQL_DATABASE={{ mysql_database }}
      - MYSQL_PASSWORD={{ mysql_database_password }}
      
    ports:
      - "{{ port }}:3306"
    
    volumes:
      - {{ home }}/data:/var/lib/mysql
      - {{ home }}/logs:/var/log/mysql
      - {{ home }}/conf.d:/etc/mysql/conf.d
    
    # Health check - check if MySQL is ready to accept connections
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-p{{ root_password }}"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 60s
    
    # Run as standard homelab user for proper file permissions
    user: "{{ uid }}:{{ gid }}"
    
    # Security options
    security_opt:
      - no-new-privileges:true
    
    # Network configuration - create dedicated mysql_legacy network
    networks:
      - mysql_legacy

    # Resource limits
    cpus: '2.0'
    mem_limit: 2048m

    # MySQL reads configuration from /etc/mysql/conf.d/custom.cnf

networks:
  mysql_legacy:
    name: mysql_legacy
    driver: bridge
    ipam:
      config:
        - subnet: 172.21.0.0/16
