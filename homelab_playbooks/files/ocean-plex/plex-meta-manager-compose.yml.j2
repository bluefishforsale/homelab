version: '3.8'

services:
  plex-meta-manager:
    image: {{ meta_manager_image }}:{{ meta_manager_version }}
    container_name: plex-meta-manager
    hostname: plex-meta-manager
    restart: unless-stopped
    user: "{{ uid }}:{{ uid }}"
    cpus: 4
    mem_limit: 2g
    security_opt:
      - no-new-privileges:true
    tmpfs:
      - /tmp:noexec,nosuid,size=200m
    environment:
      - TZ=America/Los_Angeles
      - PUID={{ uid }}
      - PGID={{ uid }}
      - VERSION={{ meta_manager_version }}
    volumes:
      - {{ meta_manager_home }}/config:/config:rw
    healthcheck:
      test: ["CMD-SHELL", "test -f /config/config.yml || exit 1"]
      interval: 60s
      timeout: 10s
      retries: 3
      start_period: 30s
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

networks:
  default:
    name: plex-meta-manager_default
