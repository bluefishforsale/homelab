version: '3.8'

services:
  prometheus:
    image: {{ image }}:{{ version }}
    container_name: {{ service }}
    restart: unless-stopped
    
    # Networking
    ports:
      - "{{ prom_port }}:9090"
    
    # Environment variables
    environment:
      - TZ=America/Los_Angeles
    
    # Mount config and data directories
    volumes:
      - {{ path_home }}/config:/etc/prometheus:ro
      - {{ path_home }}/data:/prometheus/data
    
    # Prometheus command line options
    command:
      - '--config.file=/etc/prometheus/{{ prom_config }}'
      - '--storage.tsdb.path=/prometheus/data'
      - '--storage.tsdb.retention.time={{ prom_retention }}'
      - '--log.level=info'
      - '--web.console.libraries=/usr/share/prometheus/console_libraries'
      - '--web.console.templates=/usr/share/prometheus/consoles'
      - '--web.enable-lifecycle'
      - '--web.external-url=http://{{ ansible_default_ipv4.address }}:{{ prom_port }}/'
    
    # Health Check (using wget to check Prometheus ready endpoint)
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:9090/-/ready"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    
    # Security
    security_opt:
      - no-new-privileges:true
    read_only: false
    
    # Resource Limits
    deploy:
      resources:
        limits:
          memory: 2G
        reservations:
          memory: 1G
    
    # Logging
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

    # Use default bridge network mode (same as existing containers)
    network_mode: bridge

# No custom networks needed - using default bridge
