# =============================================================================
# HOMELAB CONSOLIDATED SECRETS TEMPLATE
# =============================================================================
# Copy this to vault_secrets.yaml and fill in actual values
# Then encrypt with: ansible-vault encrypt vault_secrets.yaml
# 
# This replaces all scattered secrets across the homelab playbooks
# =============================================================================

# Cloudflare API Configuration
cloudflare:
  api_email: "your-cloudflare-email@example.com"
  api_key: "your-global-api-key-here"
  api_token: "your-cloudflare-api-token-here"  # Preferred over API key
  zone_id: "your-cloudflare-zone-id-here"
  account_id: "your-cloudflare-account-id-here"
  access_allow_emails:
    admin:
      - "your-admin-email@example.com"
      - "another-admin@example.com"

# GitLab Configuration  
gitlab:
  root_username: "root"
  root_password: "secure-admin-password-here"
  registration_token: "glrt-your-gitlab-runner-token-here"
  database_password: "gitlab-db-password-here"
  secret_key_base: "gitlab-secret-key-base-here"

# Database Credentials
databases:
  mysql:
    root_password: "mysql-root-password-here"
    app_passwords:
      nextcloud: "nextcloud-db-password"
      gitlab: "gitlab-db-password"
  postgresql:
    passwords:
      n8n: "n8n_password"
      grafana: "grafana-db-password"
  
# Media Stack Services (Arr Suite)
media_services:
  # Plex
  plex:
    claim_token: "claim-your-plex-claim-token-here"
    api_key: "your-plex-api-key-here"
  
  # Sonarr  
  sonarr:
    api_key: "your-sonarr-api-key-here"
    
  # Radarr
  radarr:
    api_key: "your-radarr-api-key-here"
    
  # Prowlarr
  prowlarr:
    api_key: "your-prowlarr-api-key-here"
    
  # Bazarr
  bazarr:
    api_key: "your-bazarr-api-key-here"
    
  # Tautulli
  tautulli:
    api_key: "your-tautulli-api-key-here"
    
  # NZBGet
  nzbget:
    control_password: "nzbget-control-password"
    restricted_password: "nzbget-restricted-password"

# AI/ML Services
ai_services:
  # Open WebUI
  open_webui:
    secret_key: "your-openwebui-secret-key-here"
    openai_api_keys: "llama.cpp Local=sk-111111111"
    webhook_url: "your-openwebui-webhook-url"
    
  # N8N Workflow Automation  
  n8n:
    encryption_key: "your-n8n-encryption-key-32-chars"
    webhook_url: "your-n8n-webhook-url"
    database_password: "n8n_password"

# Cloud Services
cloud_services:
  # NextCloud File Sharing
  nextcloud:
    admin_user: "admin"
    admin_password: "nextcloud-admin-password-here"
    database_password: "nextcloud-db-password-here" 
    redis_password: "nextcloud-redis-password-here"
    root_password: "nextcloud-mysql-root-password-here"

# External API Services
external_apis:
  # Google Cloud / GCP
  gcp:
    service_account_key: |
      {
        "type": "service_account",
        "project_id": "your-project-id",
        "private_key_id": "your-key-id",
        "private_key": "-----BEGIN PRIVATE KEY-----\nYOUR-PRIVATE-KEY-HERE\n-----END PRIVATE KEY-----\n",
        "client_email": "your-service-account@your-project.iam.gserviceaccount.com",
        "client_id": "your-client-id",
        "auth_uri": "https://accounts.google.com/o/oauth2/auth",
        "token_uri": "https://oauth2.googleapis.com/token"
      }
  
  # Cloudflare DDNS
  ddns:
    cloudflare_token: "your-ddns-specific-token-here"
    
# Network & Infrastructure
infrastructure:
  # WireGuard VPN Keys (if used)
  wireguard:
    private_keys:
      server: "server-private-key-here"
      client1: "client1-private-key-here"
  
  # SSH Keys for automation (if stored)  
  ssh:
    automation_key: |
      -----BEGIN OPENSSH PRIVATE KEY-----
      your-automation-ssh-private-key-here
      -----END OPENSSH PRIVATE KEY-----

# Monitoring & Observability  
monitoring:
  grafana:
    admin_password: "grafana-admin-password-here"
    database_password: "grafana-db-password"
    secret_key: "grafana-secret-key-here"
    
  prometheus:
    basic_auth_password: "prometheus-password-here"

# Backup & Storage
backup_storage:
  # For backup services
  s3_compatible:
    access_key: "your-s3-access-key"
    secret_key: "your-s3-secret-key"
    endpoint_url: "https://your-s3-endpoint.com"
    
# Development & CI/CD
development:
  github:
    token: "ghp_your-github-personal-access-token"
    webhook_secret: "your-github-webhook-secret"
    
  docker_registry:
    username: "your-registry-username"
    password: "your-registry-password"

# =============================================================================
# USAGE NOTES:
# =============================================================================
# 1. Copy this file to vault_secrets.yaml  
# 2. Fill in your actual secret values
# 3. Encrypt: ansible-vault encrypt vault_secrets.yaml
# 4. Add to playbooks: vars_files: - vault_secrets.yaml
# 5. Access in playbooks: {{ cloudflare.api_token }}
# =============================================================================
